<table style="margin-top: 30px">
    <tr>
        <td style="vertical-align: top; padding-bottom: 10px;">
            <span style="display:inline-block; border-bottom: 1px dashed; padding-bottom: 3px">{% block PASSENGERS_LABEL %}%LABEL%{% endblock %}:</span>
        </td>
    </tr>
    <tr>

        <td>
            {% for passanger in passengers %}
            <div style="display:inline-block; margin:5px; border-radius:15px; background-color: #eee; padding: 10px; line-height: 1.5; font-weight: bold">
                {% block PASSENGER_LIST %}{{ passanger.last_name }} {{ passanger.first_name }}{% endblock %}
            </div>
            {% endfor %}
        </td>
    </tr>
</table>