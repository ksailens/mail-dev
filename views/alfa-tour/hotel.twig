<tr>
  <td style="padding:0 24px 16px 24px">
    <table style="width:100%" cellpadding="0" cellspacing="0" border="0" align="left"
           valign="top">
      <tbody>
      <tr>
        <td align="left" style="background:#EF3124;padding:8px 16px;border-radius:7px 7px 0 0">
          <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:14px;font-weight:400;line-height:16.8px;color:#fff;text-align:left;margin:0;padding:0;white-space:nowrap">
            Отель
            <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:12px;font-weight:400;line-height:14px;color:rgba(255, 255, 255, 0.4);text-align:left;margin:0;padding:0;white-space:nowrap">
              /Hotel
            </span>
          </p>
        </td>
      </tr>
      <tr>
        <td style="padding:0 15px;display:flex;align-items:flex-start;flex-wrap:wrap;justify-content:flex-start;border-left:1px solid rgba(0, 0, 0, 0.1);border-bottom:1px solid rgba(0, 0, 0, 0.1);border-right:1px solid rgba(0, 0, 0, 0.1);border-radius:0 0 7px 7px;padding-left:14px;padding-right:14px;padding-top:0;padding-bottom:16px">
          <table cellpadding="0" cellspacing="0" border="0" align="left" valign="top">
            <tbody>
              <tr>
                <td style="display:flex;flex-wrap:wrap">
                  <table style="min-width:260px;max-width:260px;height:min-content;padding-top:16px;padding-right:15px"
                         cellpadding="0" cellspacing="0" border="0" align="left" valign="top">
                    <tbody>
                    <tr>
                      <td align="left" style="padding-bottom:10px;white-space:nowrap">
                        <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:10px;font-weight:400;line-height:12px;color:#0b1f35;text-align:left;margin:0;padding:0;white-space:nowrap">
                          Отель
                          <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:8px;font-weight:400;line-height:10px;color:rgba(0, 0, 0, 0.4);text-align:left;margin:0;padding:0;white-space:nowrap">
                            /Hotel
                          </span>
                        </p>
                      </td>
                    </tr>
                    <tr>
                      <td style="display:flex;align-items:center">
                        <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:14px;font-weight:500;line-height:16.8px;color:#0b1f35;text-align:left;text-transform:uppercase;margin:0;padding:0">
                          {{ tour.hotel }}
                        </p>
                      </td>
                    </tr>
                    </tbody>
                  </table>
                  <table style="min-width:260px;max-width:260px;height:min-content;padding-top:16px;padding-right:0px"
                         cellpadding="0" cellspacing="0" border="0" align="left" valign="top">
                    <tbody>
                    <tr>
                      <td align="left" style="padding-bottom:10px;white-space:nowrap">
                        <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:10px;font-weight:400;line-height:12px;color:#0b1f35;text-align:left;margin:0;padding:0;white-space:nowrap">
                          Адрес
                          <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:8px;font-weight:400;line-height:10px;color:rgba(0, 0, 0, 0.4);text-align:left;margin:0;padding:0;white-space:nowrap">
                            /Address
                          </span>
                        </p>
                      </td>
                    </tr>
                    <tr>
                      <td style="display:flex;align-items:center">
                        <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:14px;font-weight:500;line-height:16.8px;color:#0b1f35;text-align:left;text-transform:uppercase;margin:0;padding:0;pointer-events:none;">
                          {{ tour.address }}
                        </span>
                      </td>
                    </tr>
                    </tbody>
                  </table>
                </td>
              </tr>
              <tr>
                <td style="display:flex;flex-wrap:wrap">
                  <table style="min-width:260px;max-width:260px;height:min-content;padding-top:16px;padding-right:15px"
                         cellpadding="0" cellspacing="0" border="0" align="left" valign="top">
                    <tbody>
                    <tr>
                      <td align="left" style="padding-bottom:10px;white-space:nowrap">
                        <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:10px;font-weight:400;line-height:12px;color:#0b1f35;text-align:left;margin:0;padding:0;white-space:nowrap">
                          Тип номера
                          <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:8px;font-weight:400;line-height:10px;color:rgba(0, 0, 0, 0.4);text-align:left;margin:0;padding:0;white-space:nowrap">
                            /Accommodation
                          </span>
                        </p>
                      </td>
                    </tr>
                    <tr>
                      <td style="display:flex;align-items:center">
                        <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:14px;font-weight:500;line-height:16.8px;color:#0b1f35;text-align:left;text-transform:uppercase;margin:0;padding:0">
                          {{ tour.accommodation }}
                        </p>
                      </td>
                    </tr>
                    </tbody>
                  </table>
                  {% if tour.meal_type is not null %}
                    <table style="min-width:260px;max-width:260px;height:min-content;padding-top:16px;padding-right:0px"
                           cellpadding="0" cellspacing="0" border="0" align="left" valign="top">
                      <tbody>
                      <tr>
                        <td align="left" style="padding-bottom:10px;white-space:nowrap">
                          <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:10px;font-weight:400;line-height:12px;color:#0b1f35;text-align:left;margin:0;padding:0;white-space:nowrap">
                            Питание
                            <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:8px;font-weight:400;line-height:10px;color:rgba(0, 0, 0, 0.4);text-align:left;margin:0;padding:0;white-space:nowrap">
                              /Meal plan
                            </span>
                          </p>
                        </td>
                      </tr>
                      <tr>
                        <td style="display:flex;align-items:center">
                          <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:14px;font-weight:500;line-height:16.8px;color:#0b1f35;text-align:left;text-transform:uppercase;margin:0;padding:0;pointer-events:none;">
                            {{ tour.meal_type }}
                          </span>
                        </td>
                      </tr>
                      </tbody>
                    </table>
                  {% endif %}
                </td>
              </tr>
              <tr>
                <td style="display:flex;flex-wrap:wrap">
                  <table style="min-width:260px;max-width:260px;height:min-content;padding-top:16px;padding-right:15px"
                         cellpadding="0" cellspacing="0" border="0" align="left" valign="top">
                    <tbody>
                    <tr>
                      <td align="left" style="padding-bottom:10px;white-space:nowrap">
                        <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:10px;font-weight:400;line-height:12px;color:#0b1f35;text-align:left;margin:0;padding:0;white-space:nowrap">
                          Трансфер
                          <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:8px;font-weight:400;line-height:10px;color:rgba(0, 0, 0, 0.4);text-align:left;margin:0;padding:0;white-space:nowrap">
                            /Transfer
                          </span>
                        </p>
                      </td>
                    </tr>
                    <tr>
                      <td style="display:flex;align-items:center">
                        <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:14px;font-weight:500;line-height:16.8px;color:#0b1f35;text-align:left;text-transform:uppercase;margin:0;padding:0">
                          {{ tour.transfer ? 'Включён' : 'Отсутствует' }}
                        </p>
                      </td>
                    </tr>
                    </tbody>
                  </table>
                  {% if tour.extras is not null %}
                    <table style="min-width:260px;max-width:260px;height:min-content;padding-top:16px;padding-right:0px"
                           cellpadding="0" cellspacing="0" border="0" align="left" valign="top">
                      <tbody>
                      <tr>
                        <td align="left" style="padding-bottom:10px;white-space:nowrap">
                          <p style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:10px;font-weight:400;line-height:12px;color:#0b1f35;text-align:left;margin:0;padding:0;white-space:nowrap">
                            Дополнительные услуги
                            <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:8px;font-weight:400;line-height:10px;color:rgba(0, 0, 0, 0.4);text-align:left;margin:0;padding:0;white-space:nowrap">
                              /Extra services
                            </span>
                          </p>
                        </td>
                      </tr>
                      <tr>
                        <td style="display:flex;align-items:center">
                          <span style="font-family:'Styrene B LC', Helvetica, 'Open Sans', Arial, Verdana;font-size:14px;font-weight:500;line-height:16.8px;color:#0b1f35;text-align:left;text-transform:uppercase;margin:0;padding:0;pointer-events:none;">
                            {{ tour.extras }}
                          </span>
                        </td>
                      </tr>
                      </tbody>
                    </table>
                  {% endif %}
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
      </tbody>
    </table>
  </td>
</tr>
