{% extends 'ak/layout/root.twig' %}

{% block HTML_ATTRS %} lang="{{ lang }}" {% endblock %}

{% block BODY %}

    <table border="0" cellpadding="0" cellspacing="0"
           style="margin-left:auto; margin-right:auto; max-width:720px; min-width: 320px; table-layout: fixed">
        <tr>
            <td>
                {% embed './ak/layout/parts/header.twig' with {IS_HEADER: true} %}
                    {% block HEADER_TITLE %}{% endblock %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './ak/blocks/header/booking_header.twig' %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './ak/blocks/route/route.twig' with {IS_BODY_BLOCK: true} %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './ak/blocks/price/price_info.twig' with {IS_BODY_BLOCK: true} %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './ak/layout/parts/footer.twig' with {IS_FOOTER: true} %}
                {% endembed %}
            </td>
        </tr>
    </table>
{% endblock %}
