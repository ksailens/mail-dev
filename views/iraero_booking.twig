{% extends 'iraero/layout/root.twig' %}

{% block HTML_ATTRS %} lang="{{ lang }}" {% endblock %}

{% set TEXT_TITLE_SUCCESS_BOOKING= 'Успешно забронированно' %}

{% block BODY %}

    <table border="0" cellpadding="0" cellspacing="0"
           style="margin-left:auto; margin-right:auto; width:600px; table-layout: fixed">
        <tr>
            <td>
                {% embed './iraero/layout/parts/header.twig' %}
                    {% block HEADER_TITLE %}{{ TEXT_TITLE_SUCCESS_BOOKING }}{% endblock %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './iraero/blocks/payment/payment.twig' with {IS_PAYED:true} %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './iraero/blocks/flight/flight.twig' %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './iraero/blocks/passengers/passengers.twig' %}
                {% endembed %}
            </td>
        </tr>

        <tr>
            <td>
                {% embed './iraero/layout/parts/footer.twig' %}
                {% endembed %}
            </td>
        </tr>
    </table>
{% endblock %}